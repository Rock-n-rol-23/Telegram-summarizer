# =============================================================================
# TELEGRAM BOT CONFIGURATION
# =============================================================================
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# =============================================================================
# LLM CONFIGURATION (FREE-FIRST APPROACH)
# =============================================================================

# --- Primary: OpenRouter Free Routes ---
OPENROUTER_API_KEY=your_openrouter_api_key_here
USE_OPENROUTER_PRIMARY=true
OPENROUTER_PRIMARY_MODEL=deepseek/deepseek-chat-v3.1:free
OPENROUTER_SECONDARY_MODEL=qwen/qwen-2.5-72b-instruct:free

# --- Optional Paid Fallbacks (disabled by default) ---
GROQ_API_KEY=your_groq_api_key_here
ENABLE_GROQ_FALLBACK=false
GROQ_LLM_MODEL=llama-3.3-70b-versatile

# =============================================================================
# ASR CONFIGURATION (FREE-FIRST)
# =============================================================================
ASR_ENGINE=faster_whisper
FASTER_WHISPER_MODEL=large-v3
FASTER_WHISPER_COMPUTE=float16

# =============================================================================
# OCR CONFIGURATION
# =============================================================================
OCR_USE_TESSERACT=true
OCR_USE_PADDLE=true
OCR_LANGS=rus+eng
PDF_OCR_DPI=200
MAX_PAGES_OCR=50

# =============================================================================
# SUMMARIZATION BEHAVIOR
# =============================================================================
SUM_MAX_SENTENCES=10
SUM_CHUNK_TOKENS=3000
SUM_OVERLAP_TOKENS=300

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=sqlite:///bot_database.db
# For production PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:port/dbname

# =============================================================================
# LOGGING AND LIMITS
# =============================================================================
LOG_LEVEL=INFO
MAX_REQUESTS_PER_MINUTE=10
MAX_TEXT_LENGTH=10000
MIN_TEXT_LENGTH=50

# Structured JSON logging for production (recommended for log aggregators)
USE_JSON_LOGGING=false

# =============================================================================
# LEGACY SETTINGS (for backward compatibility)
# =============================================================================
USE_LOCAL_LLM=false
ENABLE_LOCAL_FALLBACK=false
YT_MAX_DURATION_SECONDS=7200
FORCE_JSON_MODE=true