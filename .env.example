# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
WEBHOOK_URL=https://your-domain.com/webhook
USE_WEBHOOK=0

# AI Service API Keys
GROQ_API_KEY=your_groq_api_key_here

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database
# For SQLite: DATABASE_URL=sqlite:///bot_database.db

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=20
GLOBAL_QPS_LIMIT=10

# File Processing Limits
MAX_FILE_SIZE_MB=25
MAX_IMAGE_SIZE_MB=2
MAX_WEB_CONTENT_SIZE_MB=10

# OCR Configuration
OCR_LANGS=rus+eng
PDF_OCR_DPI=150
MAX_PAGES_OCR=10

# Network Timeouts
HTTP_TIMEOUT=60
HTTP_CONNECT_TIMEOUT=30

# Server Configuration
PORT=5000
HOST=0.0.0.0
USE_GUNICORN=0
WORKERS=2

# Feature Flags
ENABLE_OCR=1
ENABLE_YOUTUBE=1
ENABLE_PDF_PROCESSING=1
ENABLE_WEB_EXTRACTION=1
ENABLE_AUDIO_PROCESSING=1

# Security
WEBHOOK_SECRET_TOKEN=your_webhook_secret_here
MIME_TYPE_VALIDATION=1

# Logging & Observability
LOG_LEVEL=INFO
STRUCTURED_LOGGING=1
LOG_REQUEST_ID=1

# Background Processing
BACKGROUND_TASK_TIMEOUT=300
PROGRESS_UPDATE_INTERVAL=5

# Temp Files & Cleanup
DATA_DIR=/tmp
TEMP_FILE_RETENTION_HOURS=24
AUTO_CLEANUP_INTERVAL=3600

# Development/Debug
DEBUG=0